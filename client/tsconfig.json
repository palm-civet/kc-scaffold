{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "editor/**/*.ts",
    "editor/**/*.tsx",
    "platform/**/*.ts",
    "platform/**/*.tsx",
    "index.ts"
  ]
}
