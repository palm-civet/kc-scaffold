{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ESNext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@platform/*": [ "./platform/*" ],
      "@editor/*": [ "./editor/*" ],
      "@common/*": [ "./common/*" ]
    }
  },
  "exclude": ["node_modules", "dist"]
}
